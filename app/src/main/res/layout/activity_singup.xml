<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/art"

    tools:context=".signup">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="118dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/singuptext"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="397dp"
        android:layout_height="336dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445">

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="311dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:cardBackgroundColor="#FFFBFB"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editText13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/username"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/password"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/conpassword"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="400dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="#F00E3B"
        android:shadowRadius="@dimen/cardview_default_radius"
        android:text="@string/createaccountbtn"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        app:layout_constraintCircleRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20" />
</androidx.constraintlayout.widget.ConstraintLayout>